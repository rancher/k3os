{
  "builders": [
    {
      "access_key": "{{user `aws_access_key`}}",
      "ami_name": "rancher-k3os-{{user `k3os_version`}}-arm64-{{isotime `200601020304`}}",
      "instance_type": "a1.large",
      "region": "{{user `region`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "source_ami_filter": {
        "filters": {
          "name": "ubuntu/images/hvm-ssd/ubuntu-focal-*-arm64-server-*",
          "root-device-type": "ebs",
          "virtualization-type": "hvm"
        },
        "most_recent": true,
        "owners": [
          "099720109477"
        ]
      },
      "ssh_username": "ubuntu",
      "tags": {
        "Name": "k3OS",
        "Version": "{{user `k3os_version`}}"
      },
      "type": "amazon-ebs"
    }
  ],
  "provisioners": [
    {
      "destination": "/tmp/config.yaml",
      "source": "./config.yaml",
      "type": "file"
    },
    {
      "destination": "/tmp/",
      "source": "../../../install.sh",
      "type": "file"
    },
    {
      "inline": [
        "sudo apt-get update -y",
        "sudo apt-get install -y dosfstools parted",
        "sudo bash -x /tmp/install.sh --takeover --poweroff --debug --tty ttyS0 --config /tmp/config.yaml --no-format $(findmnt / -o SOURCE -n) \"{{user `iso_url`}}\""
      ],
      "type": "shell"
    },
    {
      "inline": [
        "set -x; sudo systemd-run --on-active=3 --timer-property=AccuracySec=100ms sudo systemctl reboot --force --force; sync; echo Rebooting"
      ],
      "pause_after": "3m",
      "type": "shell"
    }
  ],
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "iso_url": "https://github.com/rancher/k3os/releases/download/v0.11.0/k3os-arm64.iso",
    "k3os_version": "v0.11.0",
    "region": "{{env `AWS_DEFAULT_REGION`}}"
  }
}

