{
  "variables": {
    "gcp_project_id": "{{env `GCP_PROJECT_ID`}}",
    "region": "us-east1-d",
    "k3os_version": "v0.3.0",
    "iso_url": "https://github.com/rancher/k3os/releases/download/v0.3.0/k3os-amd64.iso"
  },
  "builders": [
    {
      "type": "googlecompute",
      "account_file": "account.json",
      "project_id": "{{user `gcp_project_id`}}",
      "source_image": "ubuntu-1804-bionic-v20190911",
      "zone": "{{user `region`}}",
      "ssh_username": "ubuntu",
      "network": "default",
      "use_internal_ip": false,
      "omit_external_ip": false,
      "image_name": "rancher-k3os",
      "preemptible": "false",
      "disk_size": "50",
      "disk_type": "pd-ssd",
      "machine_type": "n1-standard-2"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "./gcp.yaml",
      "destination": "/tmp/config.yaml"
    },
    {
      "type": "file",
      "source": "../../../install.sh",
      "destination": "/tmp/"
    },
    {
      "type": "shell",
      "inline": [
        "sudo apt-get update -y",
        "sudo apt-get install -y dosfstools parted",
        "sudo bash -x /tmp/install.sh --takeover --debug --tty ttyS0 --config /tmp/config.yaml --no-format $(findmnt / -o SOURCE -n) \"{{user `iso_url`}}\" && sync"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "set -x; sudo systemd-run --on-active=3 --timer-property=AccuracySec=100ms sudo systemctl reboot --force --force; sync; echo Rebooting"
      ],
      "pause_after": "3m",
      "expect_disconnect": true
    }
  ]
}
