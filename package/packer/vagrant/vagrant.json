{
  "variables": {
    "password": "rancher",
    "version": "v0.9.0-rc4",
    "checksum": "f790f005b7c6da19b701f1a30d5786d15eb5b5b3b49837a67872769ce0709abc"
  },
  "builders": [{
    "type": "virtualbox-iso",
    "boot_wait": "6s",
    "boot_command": [
      "<enter>",
      "<wait10>",
      "rancher",
      "<enter>",
      "sudo k3os install",
      "<enter>",
      "1",
      "<enter>",
      "y",
      "<enter>",
      "http://{{ .HTTPIP }}:{{ .HTTPPort }}/cloud-config.yml",
      "<enter>",
      "y",
      "<enter>"
    ],
    "guest_os_type": "Linux_64",
    "http_directory": ".",
    "iso_url": "https://github.com/rancher/k3os/releases/download/{{user `version`}}/k3os-amd64.iso",
    "iso_checksum": "{{user `checksum`}}",
    "iso_checksum_type": "sha256",
    "ssh_username": "rancher",
    "ssh_password": "{{user `password`}}",
    "ssh_wait_timeout":"1000s",
    "disk_size": "8000",
    "shutdown_command": "sudo poweroff",
    "post_shutdown_delay": "10s",
    "format":"ova"

  }],
  "provisioners":[
    {
      "type": "shell",
      "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
      "inline": ["rm -rf /var/lib/rancher/k3s","echo hello world"]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "k3os_{{.Provider}}.box",
      "vagrantfile_template": "vagrantfile.template"
    }
  ]
}
