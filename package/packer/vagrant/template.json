{
  "builders": [
    {
      "boot_command": [
        "rancher",
        "<enter>",
        "sudo k3os install",
        "<enter>",
        "1",
        "<enter>",
        "y",
        "<enter>",
        "http://{{ .HTTPIP }}:{{ .HTTPPort }}/config.yml",
        "<enter>",
        "y",
        "<enter>"
      ],
      "boot_wait": "40s",
      "disk_size": "8000",
      "format": "ova",
      "guest_os_type": "Linux_64",
      "http_directory": ".",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "sha256",
      "iso_url": "{{user `iso_url`}}",
      "post_shutdown_delay": "10s",
      "shutdown_command": "sudo poweroff",
      "ssh_keypair_name": "",
      "ssh_private_key_file": "packer_rsa",
      "ssh_timeout": "1000s",
      "ssh_username": "rancher",
      "type": "virtualbox-iso"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "k3os_{{.Provider}}.box"
    }
  ],
  "variables": {
    "iso_checksum": "39542f9c0c597c139f0ad4bb7fe24b0a0b53f72b6602094155d1aa7730c87c10",
    "iso_url": "https://github.com/rancher/k3os/releases/download/v0.11.0/k3os-amd64.iso",
    "password": "rancher"
  }
}

